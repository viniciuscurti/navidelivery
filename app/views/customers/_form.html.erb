<%= form_with model: customer, local: true, class: "row g-3" do |f| %>
  <div class="col-md-6">
    <%= f.label :name, "Nome", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>
  <div class="col-md-6">
    <%= f.label :phone, "Telefone", class: "form-label" %>
    <%= f.text_field :phone, class: "form-control", required: true, placeholder: "(DDD) 99999-9999" %>
  </div>
  <div class="col-12">
    <%= f.label :address, "Endereço", class: "form-label" %>
    <%= f.text_field :address, class: "form-control", required: true, placeholder: "Rua, número, bairro, cidade/UF" %>
  </div>
  <div class="col-md-4">
    <%= f.label :zip_code, "CEP", class: "form-label" %>
    <%= f.text_field :zip_code, class: "form-control", required: true, placeholder: "00000-000" %>
  </div>
  <div class="col-12">
    <%= f.submit "Salvar", class: "btn btn-primary" %>
    <%= link_to "Cancelar", customers_path, class: "btn btn-link" %>
  </div>
<% end %>
